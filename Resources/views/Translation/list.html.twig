{% extends 'AsmTranslationLoaderBundle::base.html.twig' %}

{% block header %}
    {{ include('AsmTranslationLoaderBundle:Partial:header.html.twig', {'page': 'list'}) }}
{% endblock %}

{% block body %}
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <h1 class="page-header">{{ 'Overview'|trans }}</h1>
        {% if translations|length > 0 %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>{{ 'trans_key'|trans }}</th>
                    <th>{{ 'translation'|trans }}</th>
                    <th>{{ 'trans_locale'|trans }}</th>
                    <th>{{ 'message_domain'|trans }}</th>
                    <th>{{ 'date_created'|trans }}</th>
                    <th>{{ 'date_updated'|trans }}</th>
                    <th class="buttons">
                        <button type="button" class="btn btn-primary btn-xs asm-add-btn"  data-link="/{{ url_base }}/form" aria-label="{{ 'add'|trans }}">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                        </button>
                    </th>
                </tr>
                </thead>
                <tbody id="asm-translations-tbl">
                {% for translation in translations %}
                <tr>
                    <td>{{ translation.transKey }}</td>
                    <td>{{ translation.translation }}</td>
                    <td>{{ translation.transLocale }}</td>
                    <td>{{ translation.messageDomain }}</td>
                    <td>{{ translation.dateCreated|date('Y-m-d') }}</td>
                    <td>{{ translation.dateUpdated|date('Y-m-d') }}</td>
                    <td>
                        <div class="btn-group btn-group-xs">
                            <button type="button" class="btn btn-default btn-xs asm-edit-btn" data-link="/{{ url_base }}/form" aria-label="{{ 'edit'|trans }}" data-key="{{ translation.transKey }}" data-locale="{{ translation.transLocale }}" data-domain="{{ translation.messageDomain }}">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </button>
                            <button type="button" class="btn btn-default btn-xs asm-delete-btn"  data-link="/{{ url_base }}/delete" aria-label="{{ 'delete'|trans }}" data-key="{{ translation.transKey }}" data-locale="{{ translation.transLocale }}" data-domain="{{ translation.messageDomain }}">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            </button>
                        </div>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% include('AsmTranslationLoaderBundle:Translation:mustache.translation.list.html.twig') %}
        {% else %}
        <h2>{{ 'No translations found'|trans }}</h2>
        {% endif %}
    </div>
{% endblock %}
