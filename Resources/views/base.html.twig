<!DOCTYPE html>
<html lang="{% block language %}en{% endblock %}">
<head>
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block meta %}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">
        <meta name="keywords" content="">
    {% endblock %}

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/themes/smoothness/jquery-ui.css" />
    <link rel="stylesheet" href="/bundles/asmtranslationloader/css/min/core.css">
    {% block css %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
{% block header %}
    {{ include('AsmTranslationLoader:Partial:header.html.twig') }}
{% endblock %}
<div class="container page-{{ pagetype() }}">
    {% block body %}{% endblock %}
</div>
{% block footer %}
    {{ include('MxBundle:Partial:footer.html.twig') }}
{% endblock %}
<div id="asm-translation-dialog">
    <div class="content"></div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/jquery-ui.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
<script src="/bundles/asmtranslationloader/js/min/core.js"></script>
{% block javascript %}{% endblock %}
<script type="text/javascript">
    ;
    (function ($, undefined) {
        window.asm_translation = window.asm_translation || {};
        asm_translation.options = asm_translation.options || {};
        $.extend(asm_translation.options, {
            env: '{{ app.environment }}'
        });
        asm_translation.translations = asm_translation.translations || {};
        $.extend(asm_translation.translations, {
            loading: '{{ "loading"|trans }}'
        });
    })(jQuery);
    document.body.className = 'asm-translation-init {{ app.environment }}'
</script>
</body>
</html>
