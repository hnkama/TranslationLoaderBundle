<tbody id="asm-translations-tbl">
{% for translation in translations %}
    <tr>
        <td>{{ translation.transKey }}</td>
        <td>{{ translation.translation }}</td>
        <td>{{ translation.transLocale }}</td>
        <td>{{ translation.messageDomain }}</td>
        <td>{{ translation.dateCreated|date('Y-m-d') }}</td>
        <td>{{ translation.dateUpdated|date('Y-m-d') }}</td>
        <td>
            <div class="btn-group btn-group-xs">
                <button title="{{ 'Edit'|trans }}" type="button" class="btn btn-default btn-xs asm-edit-btn" data-link="{{ path('asm_translation_loader.admin.form') }}" aria-label="{{ 'edit'|trans }}" data-key="{{ translation.transKey }}" data-locale="{{ translation.transLocale }}" data-domain="{{ translation.messageDomain }}">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </button>
                <button title="{{ 'Delete'|trans }}" type="button" class="btn btn-default btn-xs asm-delete-btn"  data-link="{{ path('asm_translation_loader.admin.delete') }}" aria-label="{{ 'delete'|trans }}" data-key="{{ translation.transKey }}" data-locale="{{ translation.transLocale }}" data-domain="{{ translation.messageDomain }}">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </button>
            </div>
        </td>
    </tr>
{% endfor %}
</tbody>
